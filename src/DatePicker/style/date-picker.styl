.react-ui-date-picker {
    position: relative;
    width: 100%;

    .react-ui-date-picker-inner {
        border: 1px solid #cdcdcd;
        border-radius: 4px;
        box-sizing: border-box;
        height: 30px;
        width: 100%;
    }
}

.react-ui-date-picker-value {
    left: 10px;
    position: relative;
    top: 5px;

    &.react-ui-date-picker-placeholder {
        color: #cdcdcd;
    }
}

.react-ui-date-picker-controls {
    position: absolute;
    right: 10px;
    top: 5px;
}

.react-ui-date-picker-clear {
    &:after {
        color: #cdcdcd;
        content: '\2715';
        display: inline-block;
        font-size: 10px;
        margin-right: 4px;
    }
}

.react-ui-date-picker-trigger {
    &:after {
        color: #cdcdcd;
        content: '\25bc';
        display: inline-block;
        font-size: 10px;
    }
}

.react-ui-date-picker-open {

    .react-ui-date-picker-inner {
        border-bottom-width: 0;
        border-radius: 4px 4px 0 0;
    }

    .react-ui-date-picker-trigger {
        &:after {
            content: '\25b2';
        }
    }
}

